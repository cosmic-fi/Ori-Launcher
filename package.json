{
  "name": "ori-launcher",
  "version": "2.0.0",
  "description": "A modern Minecraft launcher with advanced features",
  "author": "Cosmic-fi <contact@cosmicfi.online>",
  "main": "src/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:ui": "vite build",
    "build": "npm run build:ui",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux",
    "release": "npm run build && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
   },
   "build": {
    "appId": "online.cosmicfi.orilauncher",
    "productName": "Ori Launcher",
    "forceCodeSigning": false,
    "files": [
      "dist/**/*",
      "src/electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "build"
    },
    "asar": true,
    "compression": "maximum",
    "win": {
       "target": [
         {
           "target": "nsis",
           "arch": ["x64"]
         },
         {
           "target": "portable",
           "arch": ["x64"]
         }
       ],
       "icon": "public/icon.ico",
       "forceCodeSigning": false
     },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ori Launcher"
    },
    "publish": {
       "provider": "github",
       "owner": "cosmic-fi",
       "repo": "Ori-Launcher",
       "releaseType": "release"
    }
   },
   "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "concurrently": "^9.2.0",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "svelte": "^5.34.7",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.3.9",
    "minecraft-java-core": "^4.1.5",
    "minecraft-launcher-js": "^0.1.0",
    "msmc": "^5.0.5",
    "node-fetch": "^3.3.2",
    "ori-mcc": "^1.0.11",
    "skin3d": "^0.0.12"
  }
}
